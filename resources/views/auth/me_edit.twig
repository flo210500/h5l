{% extends 'app.twig' %}
{% block head %}
    <link href="/public/css/auth.css" rel="stylesheet">
{% endblock %}
{% block content %}
<body class="bg-gray-400">
        <!-- Container -->
        <div class="container mx-auto">
            <div class="flex justify-center px-6 my-12">
                <!-- Row -->
                <div class="w-full xl:w-3/4 lg:w-11/12 flex shadow-xl">
                    <!-- Col -->
                    <div
                        class="w-full h-auto bg-gray-400 hidden lg:block lg:w-1/2 bg-cover rounded-l-lg"
                        style="background-image: url('https://source.unsplash.com/NyqhLE3woFY/600x800')"
                    ></div>
                    <!-- Col -->
                    <div class="w-full lg:w-1/2 bg-white p-10 rounded-lg lg:rounded-l-none content text-white">
                        <input
                            class="text-xl mt-5 w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                            id="name"
                            name="name"
                            type="text"
                            value="Siggi"
                        />
                        <p class="text-gray-500 uppercase text-sm" >Name</p>
                        <input
                            class="text-xl mt-5 w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                            id="discord"
                            name="discord"
                            type="text"
                            value="siggi#1455"
                        />
                        <p class="text-gray-500 uppercase text-sm" >Discord Benutzername</p>
                        <h1 class="text-2xl mt-5">Ferrari</h1>
                        <p class="text-gray-500 uppercase text-sm" >Zugewiesenes Team</p>
                        <input
                            class="text-xl mt-5 w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                            id="discord"
                            name="discord"
                            type="number"
                            value="87"
                            required
                        />
                        <datalist id="defaultCarNumbers">
                          <option value="10045678">
                          <option value="103421">
                          <option value="11111111">
                          <option value="12345678">
                          <option value="12999922">
                        </datalist>
                        <p class="text-gray-500 uppercase text-sm" >Fahrernummer (aus F1 Spiel)</p>
                        <button
                            class="mt-10 w-full px-4 py-2 font-bold bg-green-500 rounded-lg text-white hover:bg-green-700 hover:text-black focus:outline-none focus:shadow-outline"
                            type="submit"
                        >
                            Speichern
                        </button>
                        <a href="{{path_for('auth.me')}}">
                        <button
                            class="mt-2 w-full px-4 py-2 font-bold text-white bg-red-500 rounded-lg text-white hover:bg-red-700 hover:text-white focus:outline-none focus:shadow-outline"
                            type="submit"
                        >
                            Abbrechen
                        </button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </body>
{% endblock %}