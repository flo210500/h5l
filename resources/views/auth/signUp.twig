{% extends 'app.twig' %}
{% block head %}
    <link href="{{ asset('auth.css', 'css') }}" rel="stylesheet">
{% endblock %}
{% block content %}
 <body class="bg-gray-400">
        <!-- Container -->
        <div class="container mx-auto ">
            <div class="flex justify-center px-6 my-12 ">
                <!-- Row -->
                <div class="w-full xl:w-3/4 lg:w-11/12 flex shadow-xl">
                    <!-- Col -->
                    <div
                        class="w-full h-auto bg-gray-400 hidden lg:block lg:w-5/12 bg-cover rounded-l-lg"
                        style="background-image: url('https://source.unsplash.com/jvp_lZydFWc'); background-size:170%; background-position: center"
                    ></div>
                    <!-- Col -->
                    <div class="w-full lg:w-7/12 bg-white p-5 rounded-lg lg:rounded-l-none">
                        <h3 class="pt-4 text-2xl text-center">Erstelle einen Account</h3>
                        <form class="px-8 pt-6 pb-8 mb-4 bg-white rounded" action="{{ path_for('auth.signup') }}" method="POST">
                            <div class="mb-4">
                                <div class="mb-4 md:mr-2 md:mb-0 ">
                                    <label class="block mb-2 text-sm font-bold text-gray-700" for="name">
                                        Name
                                    </label>
                                    <input
                                        class="w-full px-3 py-2 text-sm leading-tight text-gray-700 {{ errors.name ? 'border-red-500' : ''}} border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                        id="name"
                                        name="name"
                                        type="text"
                                        value="{{ old.name }}"
                                        placeholder="Name"
                                    />
                                </div>
                            </div>
                            <div class="mb-4">
                                {{ errors |json_encode }}
                                <label class="block mb-2 text-sm font-bold text-gray-700" for="email">
                                    Discord Benutzername <i>(z.B: rudolf#1724)</i>
                                </label>
                                <input
                                    class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border {{ errors.discord ? 'border-red-500' : ''}} rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                    id="discord"
                                    type="text"
                                    name="discord"
                                    value="{{ old.discord }}"
                                    placeholder="rudolf#1724"
                                />
                                <p class="text-xs italic text-red-500">{{ errors.discord ? 'Muss Muster entsprechen: <b>rudolf#1724</b>' : ''}}</p>
                            </div>
                            <div class="mb-4 md:flex md:justify-between">
                                <div class="mb-4 md:mr-2 md:mb-0">
                                    <label class="block mb-2 text-sm font-bold text-gray-700" for="password">
                                        Passwort
                                    </label>
                                    <input
                                        class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border {{ errors.password.password ? ' border-red-500' : ''}} rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                        id="password"
                                        type="password"
                                        name="password"
                                        placeholder="******************"
                                    />
                                </div>
                                <div class="md:ml-2">
                                    <label class="block mb-2 text-sm font-bold text-gray-700" for="c_password">
                                        Passwort bestätigen
                                    </label>
                                    <input
                                        class="{{ errors.password ? 'border-red-500' : ''}} {{ errors.c_password ? 'border-red-500' : ''}} w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"
                                        id="c_password"
                                        name="c_password"
                                        type="password"
                                        placeholder="******************"
                                    />
                                    <p class="text-xs italic text-red-500">{{ errors.c_password ? 'Das Passwort stimmt nicht überein' : ''}}</p>
                                </div>
                            </div>
                            <div class="mb-6 text-center">
                                <button
                                    class="w-full px-4 py-2 font-bold text-white rounded-lg focus:outline-none focus:shadow-outline"
                                    type="submit"
                                >
                                    Jetzt registrieren
                                </button>
                            </div>
                            <hr class="mb-6 border-t" />
                            <div class="text-center">
                                <a
                                    class="inline-block text-sm text-blue-500 align-baseline hover:text-blue-800"
                                    href="#"
                                >
                                    Passwort vergessen?
                                </a>
                            </div>
                            <div class="text-center">
                                <a
                                    class="inline-block text-sm text-blue-500 align-baseline hover:text-blue-800"
                                    href="{{ path_for(auth.signin) }}"
                                >
                                    Schon registriert? Einloggen!
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
{% endblock %}