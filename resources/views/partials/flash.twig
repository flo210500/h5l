<div class="container mx-auto shadow-lg">
    {% if flash.getMessage('error') %}
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
      <p class="font-bold">Error</p>
      <p>{{ flash.getMessage('error') | first }}</p>
    </div>
    {% else %}
    {% endif %}
</div>
